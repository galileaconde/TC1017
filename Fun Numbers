#include <iostream>
using namespace std;

int main (){

int number1;
int number2;
int sum;
int differ;
int product;
int div_answer;
int remain;


  cout << "Number 1: ";
  cin >> number1;

  cout << "Number 2: ";
  cin >> number2;

  sum= number1 + number2;
  differ = number1 - number2;
  product= number1 * number2;
  div_answer= (number1/number2);
  remain= (number1 % number2);

  cout << "Sum: " << sum << endl;
  cout << "Difference: " << differ << endl;
  cout << "Product: " << product << endl;
  cout << "Division: " << div_answer << endl;
  cout << "Remainder: " << remain << endl;

return 0;
}
