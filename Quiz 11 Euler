#include <iostream>
#include <cmath>
using namespace std;

double calculate_e(double x){
  double e,y;
  if(x==0){
    e=1;
    return e;
    }
    y= 1+(1/x);
    e=pow(y,x);
 return e;
}

int main(){
  float x;
  cout << "Enter the accuracy for calculatig the number euler: " << endl;
  cin >> x;
  cout <<"Euler is: " << calculate_e(x) << endl;

  return 0;

}
